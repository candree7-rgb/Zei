# ============================================================
# AO TRADING BOT - Environment Variables
# ============================================================

# Discord (MUSS geändert werden für neuen Channel!)
DISCORD_TOKEN=Bot YOUR_TOKEN
CHANNEL_ID=1234567890              # <-- AO Trading Channel ID hier

# Bybit V5 (API key needs Futures permissions)
BYBIT_API_KEY=xxxxx
BYBIT_API_SECRET=xxxxx
BYBIT_TESTNET=false
BYBIT_DEMO=false                   # Paper trading mode

# Trading
CATEGORY=linear
QUOTE=USDT
LEVERAGE=25                        # AO Trading nutzt oft 25x

# Risk / Limits
RISK_PCT=5                         # Risiko pro Trade in %
MAX_CONCURRENT_TRADES=3
MAX_TRADES_PER_DAY=20

# Entry rules
ENTRY_EXPIRATION_MIN=180
ENTRY_TOO_FAR_PCT=0.5              # wenn Preis schon zu weit "durch" ist -> skip
ENTRY_TRIGGER_BUFFER_PCT=0.0       # optional: trigger leicht vorziehen
ENTRY_LIMIT_PRICE_OFFSET_PCT=0.00  # optional: limit leicht aggressiver machen

# SL/TP behavior
INITIAL_SL_PCT=19.0                # fallback falls Signal keinen SL hat
MOVE_SL_TO_BE_ON_TP1=true

# TP splits (sum=100) - 4 TPs wie bei AO Trading
TP_SPLITS=30,30,30,10

# DCA sizing - AO Trading hat nur 1 DCA oder keines
DCA_QTY_MULTS=1.5                  # Nur 1 DCA Multiplier

# Polling Discord
POLL_SECONDS=15
TC_MAX_LAG_SEC=300                 # Ignoriert Signale älter als 5 min

# Logging / Safety
DRY_RUN=false
LOG_LEVEL=INFO

# Optional: Telegram Alerts
# TELEGRAM_BOT_TOKEN=xxxxx
# TELEGRAM_CHAT_ID=xxxxx
